// @require '0_main' 不須載入整包，只許引入變數就好，如下方所示
@require 'mixins/_index'

.catch
  &, &-left, &-body, &-right
    position relative
  &-body
    z-index 1
    img
      opacity 0
      transform translateY(25px)
      transition-delay .45s
  &-left, &-right
    img
      opacity 0
      transition-delay .9s
      transition-timing-function ease-bounce
  &-left 
    img
      transform translateX(100%)
  &-right
    img
      transform translateX(-100%)
  &-bulb
    position absolute
    left 50%
    bottom 100%
    height auto
    margin-bottom -20px
    z-index 3
    transform translateX(-50%)
    img
      opacity 0
      transform-origin 50% 0%
      transform translateY(100%) scale(0.1)
      transition-delay 1.1s
      // transition-duration .25s
      transition-timing-function ease-bounce

.sub
  position relative
  z-index 1
  transition-delay 0.9s
  opacity 0
  transform translateY(-15px)
  transition-timing-function ease-bounce

.index-buttonGroup
  opacity 0
  transition-delay 1.75s

