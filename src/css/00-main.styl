body
  // background black
  // background c-darkenGrey3
#app
  min-height 100vh
  // background: 
.section
  position relative
  &.is-success
    animation zoomInOnce .3s
  &.is-error
    animation shake .3s

.container, .content
  width 100%
.container 
  position relative
  z-index 1

.opacity-40 
  opacity .4

.intro
  transition: 
    transform .45s ease-in-out,
    opacity .45s ease-in-out;
  &.is-active
    transform: translateX(0) translateY(0) scale(1) rotate(0) !important
    opacity 1 !important 

.deco
  position absolute
  &>img 
    min-height 100%
  &-blue-1
    top 0
    left 35%
    transform translateX(50%)
    img
      opacity 0
      transform translateY(-25px)
  &-left
    top 0
    left 0
    transform translateX(-50%)
    height 100%
    img
      opacity 0
      transform translateX(-100px)
  &-right-bottom
    right 0
    bottom 0
    transform translateX(30%)
    img
      opacity 0
      transform translateX(55px)
  &-blue-2
    right 120%
    bottom 0
    img
      opacity 0
      transform translateY(25px)

.subtitle
  position relative
  padding 5px 10px
  padding-left calc(.5em + 10px)
  font-weight bold
  color c-darkgrey
  background c-primary
  display table
  &::before
    {$content}
    position absolute
    top 50%
    left 0
    width 10px 
    height 100%
    background c-darkgrey
    transform translateY(-50%)
  &-divider
    margin 20px 0
    color c-primary

.shape
  position absolute
  &-rect-grey
    top 50%
    left 50%
    width 60%
    height 100%

    opacity 0
    transform rotate(10deg)

  &-round-dark, &-round-light
    border-radius 50%
  &-round-dark
    top 25%
    left 100%
    margin-top -60px 
    width 120px
    height 120px

    opacity 0
    transform scale(.1)

  &-round-light
    top 0%
    left 100%
    margin-top -120px 
    margin-left 120px 
    width 240px
    height 240px

    opacity 0
    transform scale(.1)

.button
  cursor pointer
  &-visible
    &-success, &-error
      display none
    .is-success &-success
      display block
    .is-error &-error
      display block
  &-hidden
    .is-success &-success
      display none
    .is-error &-error
      display none
  & ^[0]-text
    transition: 
      color .25s ease-in-out,
      background .25s ease-in-out;
  &Group
    // 
  &-style-primary
    & ^[0]-text
      padding 7.5px 40px
      background c-darkgrey
      color c-primary
      font-weight bold
    &:hover ^[0]-text
      background c-lightgrey2
      // color c-darkgrey
  &-style-icon
    background c-darkgrey
    &:hover
      background c-lightgrey2

.popup
  background rgba(c-darkgrey, .85)
  &.success-popup
    background rgba(c-success, .75)
  &.error-popup
    background rgba(c-error, .75)
  &.oops-popup
    background rgba(c-darkgrey, .85)
  position fixed
  top -100vh
  left -100vw
  width 100%
  height 100%
  // background rgba(c-darkgrey, .75)
  z-index 1000
  opacity 0
  transition: 
    top 0s .25s,
    left 0s .25s, 
    color .25s ease-in-out,
    opacity .25s ease-in-out,
    background .25s ease-in-out;
  &.is-visible
    top 0
    left 0
    opacity 1
    transition: 
      top 0s,
      left 0s, 
      color .25s ease-in-out,
      opacity .25s ease-in-out,
      background .25s ease-in-out;
  &-content
    left 0
    right 0
    max-width size-xl * 1px
    margin 0px auto 0 
  &-article
    background rgba(c-lightgrey2, .75)
    padding 60px
    // overflow auto
  &-description
    overflow auto
    max-height calc(100vh - 360px)
  &-icon, &-title, &-description, &-divider
    color c-primary
  &-title, &-description
    white-space pre-line
  &-icon
    margin-bottom -15px
    width 1em
    height 1em
    svg
      width 100%
      height 100%
      display block
      path 
        fill c-primary