// @require '0_main' 不須載入整包，只許引入變數就好，如下方所示
@require 'mixins/_index'

.deco
  &-left
    transform translateX(-60%)
.shape
  &-rect-grey
    left: calc(-50vw + 50%)
    margin-left -10px
    top 50%
    width 50vw
    height 150%
    transform translateY(-50%) rotate(15deg)
    &.is-active
      transform translateY(-50%) rotate(0) !important

.Q
  position absolute
  right 0
  top 0
  font-weight bold
  color c-darkgrey

.question
  // margin-top -100px
  padding 15px 0
  &-head
    position relative
    width 50%
    margin 0 0 30px 0
    padding 0 0 15px 0
    color c-primary
    z-index 5
    overflow hidden
  &-divider
    position absolute
    margin 0 !important
    bottom 0
    left 0
    width 100%
    height 2px !important
    color rgba(c-primary, .4)
    transform translateX(-100%)
  &-rank, &-creater
    transform translateY(100%)
    opacity 0 
  &-foot
    opacity 0
    padding 60px 0 0 0
    &.is-active
      transition-delay 3.5s
    .button-action-go
      transform translateX(-50%)
  &-main, &-body, &-text
    position relative
  &-body
    padding 0 0 30px 0
    overflow hidden
    transform translateX(-100%)
    // min-height: 3 * $fontInitial['h4_24'][1]
    &.is-active
      transition-delay 1.25s
  &-text
    // 消除 pug 第一行的空白行 
    // https://stackoverflow.com/questions/14946908/how-can-i-ignore-leading-and-trailing-linebreaks-within-an-html-code-block-usi
    // &::first-line:not(:last-line)
    //   line-height 0
    color c-light
    // font-weight bold
    white-space pre-line
    z-index 12
    transform translateX(100%)
    &.is-active
      transition-delay 1.25s

.player
  border-bottom 2px solid c-primary
  &-title, &-inputfield
    color c-primary
  &-title
    margin-right 10px
    opacity .4
  &-inputfield
    background none
    border none
    outline none
    min-width 240px

.answer
  position relative

  $text-default = c-primary
  $text-hover = c-darkgrey

  &::after
    {$content}
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 111
    display none
    .section.is-success &, .section.is-error &
      display block
  &-option
    overflow hidden
    $tims = 2.5s
    transform scale(.875)
    opacity 0
    &.is-active
      transition-duration .25s
    &.is-active
      &:nth-child(1)
        transition-delay .125s + $tims
    &.is-active
      &:nth-child(2)
        transition-delay .25s + $tims
    &.is-active
      &:nth-child(3)
        transition-delay .375s + $tims
    &.is-active
      &:nth-child(4)
        transition-delay .5s + $tims
    // &.is-active
    &-checked
      display none
    &-id
      position absolute
      top 50%
      left 0
      // color #fff
      color $text-default
      font-weight bold
      transform translateY(-42%)
      opacity .4
    &-body
      position relative
      padding 20px 25px
      min-height: 3 * $fontInitial['body1_18'][1] + 20px * 2
      // background c-primary
      background rgba(c-darkgrey, 1)
      border-bottom 2px solid c-darkgrey

    $text-default = c-primary
    $text-hover = c-darkgrey
    &-text
      // 消除 pug 第一行的空白行 
      // https://stackoverflow.com/questions/14946908/how-can-i-ignore-leading-and-trailing-linebreaks-within-an-html-code-block-usi
      // &::first-line:not(:last-line)
      //   line-height 0
      position relative
      font-weight bold
      white-space pre-line
      color $text-default
      padding-left: $fontInitial['figure_160'][1] * .6
    &:hover &
      &-body
        // background c-lightgrey2
        // background c-light
        background c-primary
      &-id,
      &-text
        color $text-hover
    &-checked:checked+&
      &-body
        background c-secondary
        & ^[1]-id,
        & ^[1]-text
          color $text-hover
    .section.is-error &-checked:checked+&
      &-body
        background c-error
        & ^[1]-id,
        & ^[1]-text
          color $text-default
    .section.is-success &-checked:checked+&
      &-body
        background c-success
        & ^[1]-id,
        & ^[1]-text
          color $text-default


