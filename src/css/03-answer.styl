// @require '0_main' 不須載入整包，只許引入變數就好，如下方所示
@require 'mixins/_index'

.deco
  &-blue-1
    top 0
    left 2.5%
    transform translateY(-20%)
  &-blue-2
    right 20%
    bottom 60px
    z-index 2

.shape
  &-round-light
    top initial
    bottom 0
    left 15%
    margin-left -120px 
    margin-bottom -120px 
    width 240px
    height 240px
    opacity 0
    transform scale(.1)

.A
  position absolute
  right 0
  top 0
  font-weight bold
  color c-darkgrey
  // z-index 33
  
.popup
  &-icon
    margin-top 40px

.answer
  position relative
  // margin-top -100px
  &-main
    background rgba(c-lightgrey2, .4)
    padding 0px 60px 60px
    max-height calc(100vh - 240px)
  &-body
    transform translateX(100%)
    overflow hidden
    // max-height calc(100vh - 360px)
    &.is-active
      transition-delay .5s
  &-scroll
    // padding-right 20px
    // margin-right -20px
    transform translateX(-100%)
    overflow auto
    &.is-active
      transition-delay .5s
  &-foot
    opacity 0
    padding 60px 0 0 0
    &.is-active
      transition-delay 1.5s
  &-main, &-bulb, &-rank
    transform scale(.25)
    opacity 0
    &.is-active
      transition-timing-function ease-bounce
  &-bulb, &-rank
    &.is-active
      transition-delay .25s
  &-subtitle
    margin-top 40px
  &-text, &-rank, &-description, &-divider
    color c-primary
  &-bulb
    margin-top -75px
    svg
      width 120px
      height 120px
      opacity 0
      transform-origin 50% 0%
      transform translateY(100%) scale(0.1)
      transition-delay 1.1s
      // transition-duration .25s
      transition-timing-function ease-bounce
      path 
        fill c-primary
  &-rank
    text-align center
  &-text, &-description
    // 消除 pug 第一行的空白行 
    // https://stackoverflow.com/questions/14946908/how-can-i-ignore-leading-and-trailing-linebreaks-within-an-html-code-block-usi
    white-space pre-line
    // &::first-line
      // white-space nowrap
  &-divider
    margin 20px 0


